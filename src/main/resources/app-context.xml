<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"

>
    <bean id="mainFrame" class="buddy.AddressFrame" init-method="init">
        <property name="buddyPanel"><ref bean="buddyPanel"/></property>
        <property name="buddyList"><ref bean="buddyList"/></property>
        <property name="addListener"><ref bean="addListener"></ref></property>
    </bean>
    <bean id="buddyPanel" class="buddy.BuddyPanel" init-method="init"></bean>
    <bean id="buddyList" class="buddy.BuddyList"></bean>
    <bean id="addListener" class="buddy.AddBuddyListener" >
        <property name="buddyPanel"><ref bean="buddyPanel"></ref></property>
        <property name="buddyList"><ref bean="buddyList"></ref></property>
    </bean>
</beans>